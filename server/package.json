{
    "name": "node-typescript-graphql-boilerplate-setup",
    "version": "1.0.0",
    "description": "BoilerPlate setup for node typescript graphql based servers",
    "main": "server.ts",
    "scripts": {
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "build": "cross-env NODE_ENV=production tsc -p ."
    },
    "author": "Alvin lal",
    "license": "MIT",
    "dependencies": {
        "apollo-server-express": "^2.14.3",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.22"
    },
    "devDependencies": {
        "@types/compression": "^1.7.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.6",
        "@types/node": "^14.0.13",
        "@typescript-eslint/eslint-plugin": "^3.2.0",
        "@typescript-eslint/parser": "^3.2.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-graphql": "^4.0.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./src/**/*.ts": [
            "npx prettier --config .prettierrc.js --write ./src/**/*.ts",
            "eslint --fix"
        ]
    }
}
